<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:mongo="http://www.springframework.org/schema/data/mongo"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/data/mongo
    http://www.springframework.org/schema/data/mongo/spring-mongo-1.0.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <context:component-scan base-package="org.tierlon" />
    <mongo:mongo host="localhost" port="27017" id="mongo" />

    <mongo:db-factory dbname="test-xreffed" mongo-ref="mongo"/>

    <mongo:mapping-converter>
        <!--<mongo:custom-converters base-package="org.tierlon.xreffed.io.converters" /> -->
        <mongo:custom-converters>
            <mongo:converter>
                <bean class="org.tierlon.xreffed.io.converters.PersonWriteConverter"/>
            </mongo:converter>
            <mongo:converter>
                <bean class="org.tierlon.xreffed.io.converters.PersonReadConverter"/>
            </mongo:converter>
        </mongo:custom-converters>

    </mongo:mapping-converter>

    <bean id="mongoTemplate" class="org.springframework.data.mongodb.core.MongoTemplate">
        <constructor-arg name="mongoDbFactory" ref="mongoDbFactory"/>
        <constructor-arg name="mongoConverter" ref="mappingConverter"/>
    </bean>


    <mongo:repositories base-package="org.tierlon.xreffed.api.repositories" />


</beans>